<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sorting_Algorithms.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label x:Name="GameMessage" 
            Text="Choose a sort!" 
            HorizontalOptions="Center"
            TextColor="CornflowerBlue"
            FontSize="Medium"
            Margin="0,10" />

            <Button x:Name="NavigateRecursiveButton"
            Text="Recursive Sort"
            HorizontalOptions="Center"
            Clicked="NavigateRecursivePage"
            BackgroundColor="LightGoldenrodYellow"
            TextColor="CornflowerBlue"
            FontSize="Medium"/>

            <Button x:Name="NavigateIterative"
            Text="Iterative Sort"
            HorizontalOptions="Center"
            Clicked="NavigateIterativePage"
            BackgroundColor="LightGoldenrodYellow"
            TextColor="CornflowerBlue"
            FontSize="Medium"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
